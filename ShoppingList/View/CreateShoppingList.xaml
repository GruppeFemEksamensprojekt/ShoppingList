<Page
    x:Class="ShoppingList.View.CreateShoppingList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="using:ShoppingList.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShoppingList.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModel:ViewModel />
    </Page.DataContext>

    <Grid Background="Gold">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                FontFamily="Comic Sans MS"
                FontSize="50"
                FontWeight="Bold"
                Text="HEADER" />
        </StackPanel>
        <StackPanel Grid.Row="1">
            <StackPanel>
                <TextBox
                    Margin="0,0,0,10"
                    PlaceholderText="Navn"
                    Text="{Binding ShoppingListNameVM, Mode=TwoWay}" />
                <ComboBox Margin="0,0,0,10" PlaceholderText="Kategori" />
            </StackPanel>
            <Button
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Command="{Binding CreateShoppingListCommand}"
                Content="TILFØJ"
                FontSize="100" />
        </StackPanel>
    </Grid>
</Page>
